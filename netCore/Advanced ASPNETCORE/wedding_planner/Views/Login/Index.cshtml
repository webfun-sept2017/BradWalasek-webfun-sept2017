
@{
    ViewData["Title"] = "Login";
}
<h1>Wedding Registration</h1>
<div class="box">
<form action="/Login" method="POST">
<h2>Login</h2>
<table>
    <tr>
        <td><label for="email">Email:</label></td>
        <td><input type="text" name="email" id="email" value="hga@asd.com"></td>
    </tr>
    <tr>
        <td><label for="password">Password:</label></td>
        <td><input type="text" name="password" id="password"></td>
    </tr> 
    <tr>
        <td><input type="submit" value="Login"></td>
    </tr>
</table>
@{
    if(!(@ViewBag.LoginError is null))
    {
        @ViewBag.LoginError
    }
}
</form>
</div>
<br>
<div class="box">
<form action="/User/Create" method="POST">
<h2>Register</h2>
<table>
    <tr>
        <td><label for="firstname">First Name:</label></td>
        <td><input type="text" name="firstname" id="firstname"></td>
    </tr>
    <tr>
        <td><label for="lastname">Last Name:</label></td>
        <td><input type="text" name="lastname" id="lastname"></td>
    </tr>
    <tr>
        <td><label for="email">Email:</label></td>
        <td><input type="text" name="email" id="email"></td>
    </tr>
    <tr>
        <td><label for="password">Password:</label></td>
        <td><input type="text" name="password" id="password"></td>
    </tr>
    <tr>
        <td><label for="confpassword">Confirm Password:</label></td>
        <td><input type="text" name="confpassword" id="confpassword"></td>
    </tr>
    <tr>
        <td><input type="submit" value="Register"></td>
    </tr>
</table>
</form>
@{
    if(!(@ViewBag.error is null))
    {
        foreach(var item in @ViewBag.error)
        {
            if(@item.Errors.Count > 0)
            {
                @item.Errors[0].ErrorMessage
                <br>
            }
        }
    }
}
</div>